<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CoffeeShop" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="bold" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleCenter" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.Button.itemSizeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#FA5252</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>